{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "NODE_ENV",
        "BGG_API_TOKEN"
      ]
    },
    "lint": {
      "env": [
        "BGG_API_TOKEN"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV"
      ]
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "BGG_API_TOKEN"
  ]
}